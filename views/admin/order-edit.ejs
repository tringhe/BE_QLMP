<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="h3 mb-0">
            <i class="fas fa-edit me-2"></i>
            Cập nhật đơn hàng
        </h2>
        <small class="text-muted">Mã đơn: <%= order._id %></small>
    </div>
    <a href="/admin/orders" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>
        Quay lại danh sách
    </a>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card card-custom mb-4">
            <div class="card-header bg-transparent">
                <h5 class="card-title mb-0">Danh sách sản phẩm (<%= order.listProduct.length %>)</h5>
            </div>
            <div class="card-body">
                <table class="table align-middle">
                    <thead>
                        <tr>
                            <th>Sản phẩm</th>
                            <th>Kích cỡ</th>
                            <th class="text-center">Số lượng</th>
                            <th class="text-end">Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% order.listProduct.forEach(item => { %>
                            <tr>
                                <td><%= item.name %></td>
                                <td><%= item.size %></td>
                                <td class="text-center"><%= item.quantity %></td>
                                <td class="text-end"><%= new Intl.NumberFormat('vi-VN').format(item.totalPrice) %> VNĐ</td>
                            </tr>
                        <% }) %>
                    </tbody>
                    <tfoot>
                        <tr class="fw-bold">
                            <td colspan="3" class="text-end">Tổng cộng:</td>
                            <td class="text-end fs-5 text-danger">
                                <%= new Intl.NumberFormat('vi-VN').format(order.totalPriceOrder) %> VNĐ
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
       <div class="card card-custom mb-4">
    <div class="card-header bg-transparent">
        <h5 class="card-title mb-0">Khách hàng & Vận chuyển</h5>
    </div>
    <div class="card-body">
        <% if (order.customerDetails) { %>
            <p class="mb-1"><strong>Tên:</strong> <%= order.customerDetails.firstName %> <%= order.customerDetails.lastName %></p>
            <p class="mb-1"><strong>Email:</strong> <%= order.customerDetails.email %></p>
        <% } else { %>
            <p class="mb-1"><strong>Tên:</strong> <%= order.firstName %> <%= order.lastName %></p>
            <p class="mb-1"><strong>Email:</strong> <%= order.email %></p>
        <% } %>
        <p class="mb-1"><strong>Điện thoại:</strong> <%= order.phoneNumber %></p>
        <hr>

        <div class="mb-3">
            <label for="streetAddress" class="form-label fw-medium">Địa chỉ giao hàng</label>
            <input type="text" class="form-control" id="streetAddress" name="streetAddress" value="<%= order.streetAddress %>">
        </div>
        <div class="mb-3">
            <label for="city" class="form-label fw-medium">Thành phố</label>
            <input type="text" class="form-control" id="city" name="city" value="<%= order.city %>">
        </div>
        <div class="mb-3">
            <label for="country" class="form-label fw-medium">Quốc gia</label>
            <input type="text" class="form-control" id="country" name="country" value="<%= order.country %>">
        </div>
        </div>
</div>

        <form method="POST" action="/admin/orders/update/<%= order._id %>">
            <div class="card card-custom mb-4">
                <div class="card-header bg-transparent">
                    <h5 class="card-title mb-0">Cập nhật Trạng thái</h5>
                </div>
                <div class="card-body">
                    <p>
                        Trạng thái thanh toán:
                        <% if (order.isPayment) { %>
                            <span class="badge bg-success">Đã thanh toán</span>
                        <% } else { %>
                            <span class="badge bg-warning text-dark">Chưa thanh toán</span>
                        <% } %>
                    </p>
                    
                    <div class="mb-3">
                        <label for="statusSelect" class="form-label fw-medium">Thay đổi trạng thái đơn hàng:</label>
                        <select class="form-select" id="statusSelect" name="status">
                            <option value="pending" <%= order.status === 'pending' ? 'selected' : '' %>>Chờ xử lý (pending)</option>
                            <option value="confirmed" <%= order.status === 'confirmed' ? 'selected' : '' %>>Đã xác nhận (confirmed)</option>
                            <option value="shipped" <%= order.status === 'shipped' ? 'selected' : '' %>>Đang giao (shipped)</option>
                            <option value="delivered" <%= order.status === 'delivered' ? 'selected' : '' %>>Đã giao (delivered)</option>
                            <option value="cancelled" <%= order.status === 'cancelled' ? 'selected' : '' %>>Đã hủy (cancelled)</option>
                        </select>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-save me-2"></i>
                        Lưu thay đổi
                    </button>
                </div>
            </div>
        </form>

    </div>
</div>