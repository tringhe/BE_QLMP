<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="h3 mb-0"><i class="fas fa-chart-pie me-2 text-primary"></i>Báo cáo & Phân tích dữ liệu</h2>
        <p class="text-muted">Tổng hợp số liệu kinh doanh và hoạt động của cửa hàng</p>
    </div>
</div>

<ul class="nav nav-tabs mb-4" id="myTab" role="tablist">
    <li class="nav-item">
        <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#tab1" type="button">
            <i class="fas fa-coins me-2"></i>Doanh Thu & Đơn Hàng
        </button>
    </li>
    <li class="nav-item">
        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab2" type="button">
            <i class="fas fa-box-open me-2"></i>Sản Phẩm & Kho
        </button>
    </li>
    <li class="nav-item">
        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab3" type="button">
            <i class="fas fa-users me-2"></i>Khách Hàng (CRM)
        </button>
    </li>
    <li class="nav-item">
        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab4" type="button">
            <i class="fas fa-star me-2"></i>Đánh Giá & Phản Hồi
        </button>
    </li>
</ul>

<div class="tab-content" id="myTabContent">

    <div class="tab-pane fade show active" id="tab1">
        <div class="row">
            <div class="col-md-8 mb-4">
                <div class="card card-custom h-100">
                    <div class="card-header">
                        <h5 class="card-title">Biểu đồ doanh thu theo tháng</h5>
                    </div>
                    <div class="card-body">
                        <div style="position: relative; height: 350px; width: 100%;">
                            <canvas id="revenueChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4 mb-4">
                <div class="card card-custom h-100">
                    <div class="card-header">
                        <h5 class="card-title">Trạng thái đơn hàng</h5>
                    </div>
                    <ul class="list-group list-group-flush">
                        <% if(data.orderStatusStats && data.orderStatusStats.length > 0) { %>
                            <% data.orderStatusStats.forEach(st => { %>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span class="badge bg-secondary text-uppercase"><%= st._id %></span>
                                    <span class="fw-bold"><%= st.SoLuong %> đơn</span>
                                </li>
                            <% }) %>
                        <% } else { %>
                            <li class="list-group-item text-center text-muted">Chưa có dữ liệu đơn hàng</li>
                        <% } %>
                    </ul>
                </div>
            </div>

            <div class="col-12">
                <div class="card card-custom">
                    <div class="card-header">
                        <h5 class="card-title text-primary">Top 5 Đơn hàng giá trị cao nhất</h5>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Mã đơn</th>
                                    <th>Khách hàng</th>
                                    <th>Tổng tiền</th>
                                    <th>Ngày tạo</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if(data.topOrders && data.topOrders.length > 0) { %>
                                    <% data.topOrders.forEach(o => { %>
                                        <tr>
                                            <td><span class="text-primary fw-bold">#<%= o._id.toString().slice(-6).toUpperCase() %></span></td>
                                            <td><%= o.customerName || 'Vãng lai' %></td>
                                            <td class="text-success fw-bold"><%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(o.totalPriceOrder) %></td>
                                            <td><%= new Date(o.createAt).toLocaleDateString('vi-VN') %></td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr><td colspan="4" class="text-center py-3">Chưa có đơn hàng nào</td></tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="tab-pane fade" id="tab2">
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card card-custom h-100">
                    <div class="card-header">
                        <h5 class="card-title text-success">Top 5 Sản phẩm bán chạy</h5>
                    </div>
                    <table class="table table-striped mb-0">
                        <thead>
                            <tr>
                                <th>Tên SP</th>
                                <th class="text-center">Đã bán</th>
                                <th>Doanh thu</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if(data.topSelling && data.topSelling.length > 0) { %>
                                <% data.topSelling.forEach(p => { %>
                                    <tr>
                                        <td class="text-truncate" style="max-width: 200px;" title="<%= p.TenSP %>"><%= p.TenSP %></td>
                                        <td class="fw-bold text-center"><%= p.DaBan %></td>
                                        <td><%= new Intl.NumberFormat('vi-VN', { notation: "compact" }).format(p.DoanhThuSP) %></td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr><td colspan="3" class="text-center text-muted">Chưa có dữ liệu bán hàng</td></tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <div class="card card-custom h-100">
                    <div class="card-header">
                        <h5 class="card-title text-primary">Thống kê theo Thương hiệu</h5>
                    </div>
                    <table class="table mb-0">
                        <thead>
                            <tr>
                                <th>Thương hiệu</th>
                                <th class="text-center">Số mẫu</th>
                                <th class="text-center">Tổng kho</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if(data.brandStats && data.brandStats.length > 0) { %>
                                <% data.brandStats.forEach(b => { %>
                                    <tr>
                                        <td class="fw-medium"><%= b._id || 'Khác' %></td>
                                        <td class="text-center"><%= b.SoLuongSP %></td>
                                        <td class="text-center"><%= b.TongTonKho %></td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr><td colspan="3" class="text-center text-muted">Chưa có dữ liệu thương hiệu</td></tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="col-12">
                <div class="card card-custom">
                    <div class="card-header">
                        <h5 class="card-title text-danger">Sản phẩm tồn kho (Chưa bán được đơn nào)</h5>
                    </div>
                    <div class="card-body">
                        <% if(data.unsoldProducts && data.unsoldProducts.length > 0) { %>
                            <div class="row g-3">
                                <% data.unsoldProducts.forEach(p => { %>
                                    <div class="col-6 col-md-2">
                                        <div class="border rounded p-2 text-center h-100 bg-light">
                                            <img src="<%= p.image && p.image[0] ? p.image[0] : '/static/images/no-image.jpg' %>" style="height: 60px; object-fit: contain;" class="mb-2">
                                            <div class="small text-truncate fw-bold" title="<%= p.name %>"><%= p.name %></div>
                                            <div class="text-muted small"><%= new Intl.NumberFormat('vi-VN').format(p.price) %> đ</div>
                                        </div>
                                    </div>
                                <% }) %>
                            </div>
                        <% } else { %>
                            <p class="text-center text-success my-3"><i class="fas fa-check-circle me-2"></i>Tuyệt vời! Không có sản phẩm nào bị tồn kho.</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="tab-pane fade" id="tab3">
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card card-custom h-100">
                    <div class="card-header">
                        <h5 class="card-title text-warning">Top Khách hàng VIP</h5>
                    </div>
                    <ul class="list-group list-group-flush">
                        <% if(data.vipCustomers && data.vipCustomers.length > 0) { %>
                            <% data.vipCustomers.forEach((c, idx) => { %>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>
                                        <span class="badge bg-warning text-dark me-2">#<%= idx+1 %></span>
                                        <%= c.info?.username || c.info?.email || 'Ẩn danh' %>
                                    </span>
                                    <span class="fw-bold text-success"><%= new Intl.NumberFormat('vi-VN').format(c.TongChiTieu) %> đ</span>
                                </li>
                            <% }) %>
                        <% } else { %>
                            <li class="list-group-item text-muted text-center">Chưa có dữ liệu VIP</li>
                        <% } %>
                    </ul>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <div class="card card-custom h-100">
                    <div class="card-header">
                        <h5 class="card-title text-info">Phân bố theo Khu vực</h5>
                    </div>
                    <ul class="list-group list-group-flush">
                        <% if(data.cityStats && data.cityStats.length > 0) { %>
                            <% data.cityStats.forEach(c => { %>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span><i class="fas fa-map-marker-alt me-2 text-danger"></i><%= c._id || 'Chưa cập nhật' %></span>
                                    <span class="badge bg-info rounded-pill"><%= c.SoLuongKhach %> đơn</span>
                                </li>
                            <% }) %>
                        <% } else { %>
                            <li class="list-group-item text-muted text-center">Chưa có dữ liệu vùng miền</li>
                        <% } %>
                    </ul>
                </div>
            </div>

            <div class="col-12">
                <div class="card card-custom border-warning">
                    <div class="card-header bg-warning-subtle">
                        <h5 class="card-title mb-0 text-dark">
                            <i class="fas fa-user-clock me-2"></i>Khách hàng tiềm năng (Đã đăng ký nhưng CHƯA mua hàng)
                        </h5>
                    </div>
                    <div class="card-body">
                        <% if(data.potentialCustomers && data.potentialCustomers.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-hover mb-0 align-middle">
                                    <thead>
                                        <tr>
                                            <th>Tên tài khoản</th>
                                            <th>Email</th>
                                            <th>Ngày tham gia</th>
                                            <th class="text-end">Hành động</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% data.potentialCustomers.forEach(u => { %>
                                            <tr>
                                                <td><%= u.username || 'Chưa đặt tên' %></td>
                                                <td><%= u.email %></td>
                                                <td><%= new Date(u.createdAt || u.createAt || Date.now()).toLocaleDateString('vi-VN') %></td>
                                                <td class="text-end">
                                                    <button class="btn btn-sm btn-primary" onclick="alert('Đã gửi mã giảm giá cho <%= u.email %>')">
                                                        <i class="fas fa-gift me-1"></i>Gửi Voucher
                                                    </button>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        <% } else { %>
                            <p class="text-center text-success my-3">
                                <i class="fas fa-check-circle me-2"></i>
                                Tuyệt vời! Tất cả khách hàng đều đã mua hàng.
                            </p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="tab-pane fade" id="tab4">
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card card-custom h-100">
                    <div class="card-header">
                        <h5 class="card-title text-success">Top Sản phẩm 5 sao</h5>
                    </div>
                    <div class="card-body p-0">
                        <ul class="list-group list-group-flush">
                            <% if(data.topRated && data.topRated.length > 0) { %>
                                <% data.topRated.forEach(p => { %>
                                    <li class="list-group-item d-flex align-items-center justify-content-between">
                                        <span class="text-truncate" style="max-width: 180px;" title="<%= p.sp?.name %>">
                                            <%= p.sp?.name || 'Sản phẩm đã xóa' %>
                                        </span>
                                        <span class="text-warning fw-bold small">
                                            <%= p.DiemTB.toFixed(1) %> <i class="fas fa-star"></i>
                                            <span class="text-muted fw-normal"> (<%= p.SoLuotDanhGia %>)</span>
                                        </span>
                                    </li>
                                <% }) %>
                            <% } else { %>
                                <li class="list-group-item text-muted text-center">Chưa có đánh giá nào</li>
                            <% } %>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card card-custom h-100 border-danger">
                    <div class="card-header bg-danger text-white">
                        <h5 class="card-title mb-0 text-white">Cảnh báo đánh giá thấp</h5>
                    </div>
                    <div class="card-body p-2">
                        <% if (data.negativeReviews && data.negativeReviews.length > 0) { %>
                            <% data.negativeReviews.forEach(r => { %>
                                <div class="alert alert-light border mb-2 p-2 shadow-sm">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <strong class="text-danger"><%= r.rating %> <i class="fas fa-star"></i></strong>
                                        <small class="text-muted"><%= new Date(r.createdAt).toLocaleDateString('vi-VN') %></small>
                                    </div>
                                    <div class="small text-dark mt-1 fst-italic">"<%= r.comment %>"</div>
                                    <div class="small text-end mt-1 text-muted">- <%= r.userName || 'Khách' %></div>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <div class="text-center py-4 text-success">
                                <i class="fas fa-smile fa-3x mb-2"></i>
                                <p>Không có đánh giá tiêu cực!</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card card-custom h-100">
                    <div class="card-header">
                        <h5 class="card-title text-primary">Hoạt động gần đây</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="list-group list-group-flush">
                            <% if(data.recentReviews && data.recentReviews.length > 0) { %>
                                <% data.recentReviews.forEach(r => { %>
                                    <div class="list-group-item">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1 fw-bold text-primary"><%= r.userName || 'Khách hàng' %></h6>
                                            <small class="text-muted"><%= new Date(r.createdAt).toLocaleDateString('vi-VN') %></small>
                                        </div>
                                        <div class="mb-1 small text-warning">
                                            <% for(let i=0; i<r.rating; i++) { %><i class="fas fa-star"></i><% } %>
                                        </div>
                                        <p class="mb-1 small text-truncate fst-italic">"<%= r.comment %>"</p>
                                    </div>
                                <% }) %>
                            <% } else { %>
                                <p class="text-center text-muted py-3">Chưa có hoạt động nào</p>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        try {
            // FIX LỖI EJS BÁO ĐỎ VS CODE
            const chartLabels = JSON.parse('<%- JSON.stringify(data.chartLabels || []) %>');
            const chartData = JSON.parse('<%- JSON.stringify(data.chartData || []) %>');

            const ctx = document.getElementById('revenueChart');
            
            if (ctx && chartLabels.length > 0) {
                new Chart(ctx.getContext('2d'), {
                    type: 'line',
                    data: {
                        labels: chartLabels,
                        datasets: [{
                            label: 'Doanh thu (VNĐ)',
                            data: chartData,
                            borderColor: '#3b82f6',
                            backgroundColor: 'rgba(59, 130, 246, 0.1)',
                            borderWidth: 2,
                            tension: 0.4,
                            fill: true,
                            pointBackgroundColor: '#ffffff',
                            pointBorderColor: '#3b82f6',
                            pointRadius: 5,
                            pointHoverRadius: 7
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: { display: false },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        return 'Doanh thu: ' + new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(context.parsed.y);
                                    }
                                }
                            }
                        },
                        scales: {
                            y: {
                                beginAtZero: true,
                                grid: { borderDash: [2, 4], color: '#e5e7eb' },
                                ticks: {
                                    callback: function(value) {
                                        return new Intl.NumberFormat('vi-VN', { notation: "compact" }).format(value) + 'đ';
                                    }
                                }
                            },
                            x: {
                                grid: { display: false }
                            }
                        }
                    }
                });
            }
        } catch (e) {
            console.error("Lỗi vẽ biểu đồ:", e);
        }
    });
</script>