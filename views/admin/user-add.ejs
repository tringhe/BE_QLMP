<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="h3 mb-0">
            <i class="fas fa-user-plus me-2"></i>
            Thêm khách hàng mới
        </h2>
    </div>
    <a href="/admin/users" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>
        Quay lại danh sách
    </a>
</div>

<form method="POST" action="/admin/users/add">
    <div class="row">
        <div class="col-lg-8">
            <div class="card card-custom mb-4">
                <div class="card-header bg-transparent">
                    <h5 class="card-title mb-0">Thông tin tài khoản</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="mb-3">
                            <label class="form-label">Username (Tên đăng nhập)</label>
                                <input type="text" class="form-control" name="username" value="<%= locals.user ? user.username : '' %>" required>                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Email <span class="text-danger">*</span></label>
                        <input type="email" class="form-control" name="email" required>
                        <div class="form-text">Email này sẽ dùng để đăng nhập.</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Mật khẩu <span class="text-danger">*</span></label>
                        <input type="password" class="form-control" name="password" minlength="6" required>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Số điện thoại</label>
                            <input type="text" class="form-control" name="phoneNumber">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Địa chỉ</label>
                            <input type="text" class="form-control" name="address">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card card-custom mb-4">
                <div class="card-header bg-transparent">
                    <h5 class="card-title mb-0">Cài đặt</h5>
                </div>
                <div class="card-body">
                    <!-- <div class="mb-3">
                        <label class="form-label fw-medium">Vai trò (Role)</label>
                        <select class="form-select" name="role">
                            <option value="client" selected>Khách hàng (Client)</option>
                            <option value="admin">Quản trị viên (Admin)</option>
                        </select>
                    </div> -->

                    <div class="mb-3">
                        <label class="form-label fw-medium">Trạng thái</label>
                        <select class="form-select" name="status">
                            <option value="active" selected>Hoạt động</option>
                            <option value="inactive">Không hoạt động</option>
                            <option value="blocked">Bị chặn</option>
                        </select>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" name="verify" id="verifyCheck">
                        <label class="form-check-label" for="verifyCheck">
                            Đã xác thực Email
                        </label>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-save me-2"></i>
                        Lưu khách hàng
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>